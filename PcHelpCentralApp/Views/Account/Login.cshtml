@model LoginModel

<div class="text-center my-5 text-white">

    <h6 class="display-6">
        <i class="fa-solid text-white fa-right-to-bracket bg-secondary p-3 rounded-5"></i>
        <br />
        Login
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-white">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group my-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Login
                </button>
            </div>
        </form>

        <div class="text-white">
            If you do not have an account, please click to <a asp-action="Register"> register.</a>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

