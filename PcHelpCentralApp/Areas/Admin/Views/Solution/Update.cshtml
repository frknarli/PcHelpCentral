@model SolutionDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data" asp-route-id="@Model?.SolutionId">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="SolutionId" />

    <div class="form-group my-3">
        <label asp-for="SolutionText">Solution</label>
        <input asp-for="SolutionText" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Question">Question</label>
        <input asp-for="Question" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" class="form-control" />
    </div>

    <div class="form-check form-switch">
        <input asp-for="Showcase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
    </div>

    <div class="from-group my-3">
        <img class="rounded shadow" width="200" src="@Model?.ImageUrl" />
    </div>

    <div class="form-group my-3">
        <div>
            <label asp-for="ImageUrl">Image</label>
        </div>    
        <input type="file" name="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Content">Content</label>
        <textarea asp-for="Content" id="tiny"></textarea>
    </div>


    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Get" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Solutions
            </a>
        </div>
    </div>
</form>

