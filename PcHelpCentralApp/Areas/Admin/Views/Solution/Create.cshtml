@model SolutionDtoForInsertion

<div>
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="SolutionText">Solution</label>
        <input asp-for="SolutionText" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Question">Question</label>
        <input asp-for="Question" class="form-control" />
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ImageUrl">Image</label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Content">Content</label>
        <textarea asp-for="Content" id="tiny"></textarea>
    </div>

    <div class="form-group my-3">
        <div>
            <button class="btn btn-primary" type="submit">
            <i class="fa fa-save"></i>
            Save
            </button>
            <a asp-action="Get" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Solutions
                </a>
        </div>
    </div>
</form>