@model Solution


<div class="col-sm-12 col-md-3 my-4" onclick="window.location.href='@Url.Action("Get", "Solution", new { id = Model.SolutionId })'">
    <div class="card border-dark" style="width: 18rem;">
        
        <img class="card-img-top" src="@Model?.ImageUrl" alt="..." style="height: 170px"/>
         

        <div class="card-body">
            <div class="card-text">
                <div class="text-center lead p-2 rounded-4" style="font-family: 'Poppins', sans-serif;color: orange">
                    @Model.Question
                </div>
                <div class="text-smaller" style="color: lightslategray">
                    @Model.Date.ToString("MM/dd/yyyy")
                </div>
            </div>
        </div>
        <style>
            .card {
                background-color: rgba(40, 37, 37, 0.7);
            }
        </style>
    </div>
</div>





